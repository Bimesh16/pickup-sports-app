{
  "name": "pickup-sports-frontend-web",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview --port 5174",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:auth": "playwright test e2e/auth/",
    "test:dashboard": "playwright test e2e/dashboard/",
    "test:realtime": "playwright test e2e/realtime/",
    "test:performance": "playwright test e2e/performance/",
    "test:mobile": "playwright test --project=mobile-chrome",
    "test:desktop": "playwright test --project=chromium",
    "test:all-browsers": "playwright test --project=chromium --project=firefox --project=webkit",
    "test:slow-3g": "SLOW_3G=true playwright test e2e/performance/",
    "test:ci": "playwright test --reporter=html --reporter=junit",
    "test:install": "playwright install",
    "test:codegen": "playwright codegen localhost:5173",
    "lighthouse": "lighthouse http://localhost:5173 --output=html --output-path=./lighthouse-report.html",
    "lighthouse:mobile": "lighthouse http://localhost:5173 --output=html --output-path=./lighthouse-mobile-report.html --form-factor=mobile --throttling-method=devtools",
    "lighthouse:ci": "lighthouse http://localhost:5173 --output=json --output-path=./lighthouse-report.json --chrome-flags='--headless'"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@stomp/stompjs": "^7.2.0",
    "@tanstack/react-query": "^5.87.4",
    "@types/leaflet": "^1.9.20",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "events": "^3.3.0",
    "framer-motion": "^12.23.12",
    "leaflet": "^1.9.4",
    "lucide-react": "^0.544.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.62.0",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^6.26.2",
    "react-toastify": "^10.0.6",
    "sockjs-client": "^1.6.1",
    "tailwind-merge": "^2.0.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^5.0.2",
    "autoprefixer": "^10.4.21",
    "lighthouse": "^12.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.5.4",
    "vite": "^5.4.8"
  }
}
